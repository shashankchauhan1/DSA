// java

class Solution {
    public void generate(int index,String s,StringBuilder sb,List<String> result){
        if(index==s.length()){
            result.add(sb.toString());
            return;
        }

        if(Character.isLetter(s.charAt(index))){
            // make it capital
            sb.append(Character.toUpperCase(s.charAt(index)));
            generate(index+1,s,sb,result);
            sb.deleteCharAt(sb.length()-1);

            // make it lower
            sb.append(Character.toLowerCase(s.charAt(index)));
            generate(index+1,s,sb,result);
            sb.deleteCharAt(sb.length()-1);
        }
        else{
            sb.append(s.charAt(index));
            generate(index+1,s,sb,result);
            sb.deleteCharAt(sb.length()-1);
        }
    }

    public List<String> letterCasePermutation(String s) {
        List<String> result = new ArrayList<>();
        generate(0,s,new StringBuilder(),result);
        
        return result;
    }
}
