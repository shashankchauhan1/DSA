_______________________________________ 1> Ascending ___________________________________

#include<iostream>
#include<string>
using namespace std;

void print(int n,int i){
    if(n<i) return;
    print(n-1,i);
    cout<<n<<" ";
}

int main(){
    int n;
    cin>>n;
    print(n,1);
    return 0;
}

_______________________________________ 2> Descending _______________________________________

#include<iostream>
#include<string>
using namespace std;

void print(int i,int n){
    if(i>n) return;
    print(i+1,n);
    cout<<i<<" ";
}

int main(){
    int n;
    cin>>n;
    print(1,n);
    return 0;
}
