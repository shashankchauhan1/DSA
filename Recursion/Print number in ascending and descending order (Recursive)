_____________________________________1> Ascending________________________

#include<iostream>
#include<string>
using namespace std;

void print(int i,int n){
    if(i>n) return;
    cout<<i<<" ";
    print(i+1,n);
}

int main(){
    int n;
    cin>>n;
    print(1,n);
    return 0;
}

____________________________________2> Descending______________________________

#include<iostream>
#include<string>
using namespace std;

void print(int n){
    if(n<1) return;
    cout<<n<<" ";
    print(n-1);
}

int main(){
    int n;
    cin>>n;
    print(n);
    return 0;
}
