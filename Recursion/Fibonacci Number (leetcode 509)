// java

class Solution {
    public int fib(int n) {
        if(n==0 || n==1) return n;
        return fib(n-1)+fib(n-2);
    }
}

------------------------------------------------------------------------------------------------------------------------------------------------------------------------

// c++

#include<bits/stdc++.h>
using namespace std;

int fibonacci(int n){
    if(n<=1) return n;
    
    return fibonacci(n-1)+fibonacci(n-2);
}

int mai|
    int n;
    cin>>n;
    cout<<"Nth Fibonacci Number is: "<<fibonacci(n)<<endl;
    return 0;
}
