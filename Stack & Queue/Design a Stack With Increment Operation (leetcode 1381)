// java

class CustomStack {
    int[] arr;
    int top;

    public CustomStack(int maxSize) {
        arr = new int[maxSize];
        top = -1;
    }
    
    public void push(int x) {
        if(top==arr.length-1) return;
        top++;
        arr[top] = x;
    }
    
    public int pop() {
        if(top == -1) return -1;
        int el = arr[top];
        top--;
        return el;
    }
    
    public void increment(int k, int val) {
        int index = 0;
        while(k>0 && index<=top){
            arr[index] += val;
            index++;
            k--;
        }
    }
}

/**
 * Your CustomStack object will be instantiated and called as such:
 * CustomStack obj = new CustomStack(maxSize);
 * obj.push(x);
 * int param_2 = obj.pop();
 * obj.increment(k,val);
 */
