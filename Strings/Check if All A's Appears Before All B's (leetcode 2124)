// java

class Solution {
    public boolean checkString(String s) {
        int n = s.length();
        int lastSeenA=0,lastSeenB=-1;
        for(int i=0; i<n; i++){
            if(s.charAt(i)=='a'){
                if(lastSeenB!=-1 && lastSeenB<i) return false;
                lastSeenA = i;
            }
            else if(s.charAt(i)=='b'){
                lastSeenB =i;
            }
        }
        return true;
    }
}
