// java

class Solution {
    public int numSub(String s) {
        long n = 0;
        int mod = (int)(1e9+7);
        long sum = 0;
        for(int i=0; i<s.length(); i++){
            if(s.charAt(i)=='1'){
                n++;
            }
            else{
                sum += (n*(n+1)/2)%mod;
                n=0;
            }
        }
        if(n>0){
            sum += (n*(n+1)/2)%mod;
        }

        return (int)(sum%mod);
    }
}
