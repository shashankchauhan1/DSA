// java

class Solution {
    public long maxKelements(int[] nums, int k) {
        PriorityQueue<Integer> pq = new PriorityQueue<>((a,b) -> b-a);
        for(int num : nums) pq.offer(num);

        long sum = 0;
        while(k>0){
            int num = pq.poll();
            sum += num;
            pq.offer((int)Math.ceil(num/3.0));
            k--;
        }
        return sum;
    }
}
