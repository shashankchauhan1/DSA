// java

class Solution {
    public int areaOfMaxDiagonal(int[][] dimensions) {
        int n=dimensions.length;
        int maxDiagonal=-1;
        int maxArea=-1;
        for(int i=0; i<n; i++){
            int u=dimensions[i][0];
            int v=dimensions[i][1];
            int currentDiagonal=u*u + v*v;
            if(currentDiagonal>maxDiagonal){
                maxDiagonal=currentDiagonal;
                maxArea=u*v;
            }
            else if(currentDiagonal==maxDiagonal){
                maxArea=Math.max(u*v,maxArea);
            }
        }
        return maxArea;
    }
}
