// java

class Solution {
    public boolean find(int[] nums,int target){
        int s=0;
        int e=nums.length-1;
        while(s<=e){
            int mid=s+(e-s)/2;
            if(nums[mid]==target) return true;
            else if(nums[mid]<target) s=mid+1;
            else e=mid-1;
        }
        return false;
    }

    public boolean searchMatrix(int[][] matrix, int target) {
        int n=matrix.length;
        int m=matrix[0].length;

        for(int i=0; i<n; i++){
            if(find(matrix[i],target)) return true;
        }
        return false;
    }
}
