// java

class Solution {
    public boolean isValid(int[] time,long mid,int totalTrips){
        long sum = 0;
        for(int i=0; i<time.length; i++){
            sum += mid/time[i];
            if(sum>=totalTrips) return true;
        }
        return false;
    }

    public long minimumTime(int[] time, int totalTrips) {
        int n = time.length;
        long min = Long.MAX_VALUE;
        for(int num : time) min = Math.min(min,num);

        long s = 0, e = min*totalTrips;
        long ans = 0;
        while(s<=e){
            long mid = s+(e-s)/2;
            if(isValid(time,mid,totalTrips)){
                ans = mid;
                e = mid-1;
            }
            else{
                s = mid+1;
            }
        }
        return ans;
    }
}
