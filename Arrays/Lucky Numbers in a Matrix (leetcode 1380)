// java

class Solution {
    public List<Integer> luckyNumbers(int[][] matrix) {
        int n=matrix.length;
        int m=matrix[0].length;

        List<Integer> list=new ArrayList<>();

        for(int i=0; i<n; i++){
            int minCol=Integer.MAX_VALUE;
            int minEl=Integer.MAX_VALUE;

            // find minimum element in the row
            for(int j=0; j<m; j++){ 
                if(matrix[i][j] < minEl){
                    minEl=matrix[i][j];
                    minCol=j;
                }
            }
            // find maximum element in that column;
            int maxEl=-1;
            for(int k=0; k<n; k++){
                maxEl=Math.max(maxEl,matrix[k][minCol]);
            }
            if(maxEl==minEl) list.add(maxEl);
        }
        return list;
    }
}
