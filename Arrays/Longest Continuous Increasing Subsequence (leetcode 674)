// java

class Solution {
    public int findLengthOfLCIS(int[] nums) {
        int n = nums.length;
        int max=1;
        int cnt=1;
        for(int i=1; i<n; i++){
            if(nums[i]>nums[i-1]) cnt++;
            else{
                max = Math.max(max,cnt);
                cnt = 1;
            }
        }
        max = Math.max(max,cnt);

        return max;
    }
}
