// java

class Solution {
    public long maximumHappinessSum(int[] happiness, int k) {
        Arrays.sort(happiness);

        int dec = 0;
        long happy = 0;
        int n = happiness.length;
        for(int i=n-1; i>=0 && k>0; i--){
            happiness[i] -= dec;
            if(happiness[i]>0) happy += happiness[i];
            dec++;
            k--;
        }

        return happy;
    }
}
