// java

class Solution {
    public int[][] divideArray(int[] nums, int k) {
        Arrays.sort(nums);
        int n=nums.length;
        int[][] ans=new int[n/3][3];
        int z=0;
        for(int i=0; i<n; i+=3){
            int[] a=new int[3];
            for(int j=0; j<3; j++){
                a[j]=nums[i+j];
            }
            if(a[1]-a[0]>k || a[2]-a[1]>k || a[2]-a[0]>k) return new int[0][0];
            ans[z++]=a;
        }

        return ans;
    }
}
