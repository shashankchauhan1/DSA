// java

class Solution {
    public int minRemoval(int[] nums, int k) {
        int n = nums.length;
        if(n==1) return 0;

        int ans = Integer.MAX_VALUE;
        Arrays.sort(nums);

        int i=0,j=0;
        while(j<n){
            while(j<n && nums[j] <= (long)nums[i]*k) j++;
            ans = Math.min(ans,n-(j-i));
            i++;
        }

        return ans;
    }
}
