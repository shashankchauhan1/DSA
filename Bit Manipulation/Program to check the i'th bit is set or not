// Program to check the i'th bit is set or not, (A bit is set if it is 1).

FORMULA: (n>>i)&1;

#include<iostream>
using namespace std;

int main(){
    int n;
    cout<<"Enter a number: ";
    cin>>n;
    int i;
    cout<<"Enter the bit you want to check: ";
    cin>>i;
    auto it= (n>>i)&1;
    cout<<it<<endl;
    return 0;
}
