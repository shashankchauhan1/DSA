// java

// A bit is set means it is 1
// left Shift 1 by k places and do a 'and' operation, if the answer is != 0 means its set otherwise not

class CheckBit {
    static boolean checkKthBit(int n, int k) {
        int i=1;
        i=i<<k;
        
        if((n&i) != 0) return true;
        
        return false;
    }
}
