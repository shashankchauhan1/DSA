// java
// count set bits -> just do a 'and' of n with n-1 , everytime until n becomes zero we just remove the last set bit

class Solution {
    public int count(int n){
        int cnt=0;
        while(n!=0){
            n=n&(n-1);        // count set bits
            cnt++;
        }
        return cnt;
    }

    public int[] countBits(int n) {
        int[] arr=new int[n+1];

        for(int i=0; i<=n; i++){
            arr[i]=count(i);
        }
        return arr;
    }
}
