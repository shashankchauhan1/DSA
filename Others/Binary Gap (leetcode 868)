// java

class Solution {
    public int binaryGap(int n) {
        String s = Integer.toBinaryString(n);
        int prevOne = s.length();
        int currOne = -1;

        int maxDiff = 0;
        int prev = -1;
        for(int i=0; i<s.length(); i++){
            if(s.charAt(i)=='1'){
                if(prev!=-1){
                    maxDiff = Math.max(maxDiff,i-prev);
                }
                prev = i;
            }
        }

        return maxDiff;
    }
}
