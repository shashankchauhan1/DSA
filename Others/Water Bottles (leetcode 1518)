// java

class Solution {
    public int numWaterBottles(int numBottles, int numExchange) {        
        int count=numBottles;

        while(numBottles>=numExchange){
            int ableToDrink=numBottles/numExchange;
            int notAbleToDrink=numBottles%numExchange;

            count+=ableToDrink;

            numBottles=ableToDrink+notAbleToDrink;
        }
        return count;
    }
}
