// java

/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public void f(TreeNode root,StringBuilder sb,int[] ans){
        if(root==null) return;

        sb.append(root.val);

        if(root.left==null && root.right==null){
            ans[0] += Integer.parseInt(sb.toString(),2);
        }

        f(root.left,sb,ans);
        f(root.right,sb,ans);
        sb.deleteCharAt(sb.length()-1);
    }

    public int sumRootToLeaf(TreeNode root) {
        int[] ans = new int[1];
        f(root,new StringBuilder(),ans);
        return ans[0];
    }
}
