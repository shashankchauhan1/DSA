// java

/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public TreeNode createBinaryTree(int[][] descriptions) {
        Map<Integer,TreeNode> map = new HashMap<>();
        Map<Integer,Integer> parentMap = new HashMap<>();

        for(int[] desc : descriptions){
            int node = desc[0];
            int child = desc[1];
            int side = desc[2];

            TreeNode parentNode = null;
            TreeNode childNode = null;

            if(!map.containsKey(node)){
            // if map doesn't contains key so create a new 
                parentNode = new TreeNode(node);            
                map.put(node,parentNode);
            }
            else{
            // map already contains parent node so just fetch it
                parentNode = map.get(node);
            }
            
            if(!map.containsKey(child)){
                childNode = new TreeNode(child);
            }
            else childNode = map.get(child);

            if(side==1) parentNode.left = childNode;
            else parentNode.right = childNode;

            parentMap.put(child,node);
            map.put(child,childNode);
        }

        for(int key : map.keySet()){
            if(!parentMap.containsKey(key)){
                // this is the root;
                return map.get(key);
            }
        }
        return null;
    }
}
