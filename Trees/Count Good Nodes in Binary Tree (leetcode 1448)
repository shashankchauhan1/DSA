// java

/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public void f(TreeNode root,int[] cnt,int max){
        if(root==null) return;

        if(root.val>=max){
            max = root.val;
            cnt[0]++;
        }

        f(root.left,cnt,max);
        f(root.right,cnt,max);
    }

    public int goodNodes(TreeNode root) {
        int cnt[] = new int[1];
        f(root,cnt,root.val);
        return cnt[0];
    }
}
