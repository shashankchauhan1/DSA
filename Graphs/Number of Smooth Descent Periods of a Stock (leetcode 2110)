// java

class Solution {
    public long getDescentPeriods(int[] prices) {
        int n = prices.length;
        int[] dp = new int[n];
        dp[0] = 1;
        long sum = dp[0];

        for(int i=1; i<n; i++){
            if(prices[i]+1==prices[i-1]) dp[i] = 1 + dp[i-1];
            else dp[i] = 1;
            sum+=dp[i]; 
        }

        return sum;
    }
}
