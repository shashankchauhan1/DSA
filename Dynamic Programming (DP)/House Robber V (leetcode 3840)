// java

class Solution {
    public long rob(int[] nums, int[] colors) {
        int n = nums.length;
        long[] dp = new long[n];
        dp[0] = nums[0];
        for(int i=1; i<n; i++){
            long pick = nums[i];
            if(colors[i-1]!=colors[i]) pick += dp[i-1];
            else if(i>1) pick += dp[i-2];
            long notPick = dp[i-1];

            dp[i] = Math.max(pick,notPick);
        }

        return dp[n-1];
    }
}
