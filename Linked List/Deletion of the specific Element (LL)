#include<iostream>
#include<vector>
using namespace std;

class Node{
    public:
        int data;
        Node* next;
        
    Node(int d,Node* n){
        data=d;
        next=n;
    }
    Node(int d){
        data=d;
        next=nullptr;
    }
};

Node* convertArray(vector<int>&v){
    Node* head=new Node(v[0]);
    Node* mover=head;
    for(int i=1; i<v.size(); i++){
        Node* temp=new Node(v[i]);
        mover->next=temp;
        mover=temp;
    }
    return head;
}

void printLL(Node* head){
    Node* temp=head;
    while(temp){
        cout<<temp->data<<" ";
        temp=temp->next;
    }
}

Node* deleteElement(Node* head,int val){            // function to delete the specific element
    if(head==NULL) return NULL;  
    
    while(head->data==val){
        Node* temp=head;
        head=head->next;
        delete temp;
    }
    
    Node* temp=head;
    while(temp && temp->next){
        if(temp->next->data==val){
            Node* del=temp->next;
            temp->next=temp->next->next;
            delete del;
        }
        temp=temp->next;
    }
    
    return head;
}

int main(){
    vector<int>v={1,2,3,4,3,6,3,5};
    Node* head=convertArray(v);
    printLL(head);
    cout<<endl;
    head=deleteElement(head,3);
    printLL(head);
    return 0;
}
